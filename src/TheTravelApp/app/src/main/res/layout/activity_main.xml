<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.anderswind.thetravelapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter check-in station"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/selectCheckInButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkInStation"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@id/selectCheckInButton"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter check-out station"
        android:id="@+id/textView2"
        android:layout_below="@+id/checkInStation"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/selectCheckOutButton"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:enabled="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkOutStation"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/selectCheckOutButton"
        android:inputType="text"
        android:enabled="false" />


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Check in"
        android:id="@+id/checkInButton"
        android:layout_below="@+id/checkOutStation"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Check out"
        android:id="@+id/checkOutButton"
        android:layout_below="@+id/checkOutStation"
        android:layout_alignParentEnd="true"
        android:enabled="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/train" />


</RelativeLayout>
